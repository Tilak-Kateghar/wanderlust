<% layout('layouts/boilerplate') %>
<script>
    let mapToken = "<%= process.env.MAP_TOKEN %>";
    let listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row mt-3">
    <div class="col-8 offset-3">
        <br>
        <h3><%=listing.title  %></h3>
        <br>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing_image">
        <div class="card-body">
            <p class="card-text">
                <b>Owned by:</b> <i><%= listing.owner.username %></i></p>
                
                Price: &#8377;<%= listing.price.toLocaleString("en-IN") %> /night<br>
                <br>
                <ul>
                    <li><%= listing.description %> <br></li>
                    <li>Location: <%= listing.location %> <br></li>
                    <li>Country: <%= listing.country %> <br></li>
                </ul>
                
                
                
                <br>  
            </p>
            <%if(currUser &&  !currUser._id.equals(listing.owner._id)){%>
                <div class="btns ">
                    <form method="post" action="/listings/<%=listing._id%>/order">
                        <button class="btn btn-danger">Book Now!</button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>
    <br>
    <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="btns">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn  offset-3" style="height: 50%;">Edit</a>
        
            <form  method="post" action="/listings/<%= listing._id %>?_method=Delete">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>
    <% } %>
    
    <br>
    <br>
    <br>
    <div class="col-8 offset-3 mb-3">
        <% if (currUser) { %>
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%=listing._id%>/reviews" method="post">
                <!-- <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div> -->
                <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                    <!-- <legend>First rating:</legend> -->
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                </div>
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Comment</label>
                    <!-- <input type="textare" min="1" max="5" id="rating" name="review[comment]"> -->
                     <textarea required name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
                </div>
                <br>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
        <% } %>
        <hr>
        <p><b>All Reviews</b></p>
        <% if (listing.reviews.length==0) { %>
            <p>No Reviews Yet</p>
        <% } %>
         
        <div class="row">
            <% (listing.reviews).forEach(review => { %>
                <div class="card col-5 mb-3 ms-3">
                    <div class="card-body">
                        <h5 class="card-title">@<%= review.author.username %></h5>
                        <p class="starability-result" data-rating="<%= review.rating %>"></p>
                        <p class="card-text"><%= review.comment %></p>
                    </div>
                    <form class="mb-3 ms-3" method="post" action="/listings/<%=listing._id%>/reviews/<%= review._id %>?_method=Delete">
                        <button class="btn btn-dark">Delete</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </div>
    <div class="col-6 offset-3 mb-3">
        <h3>Where you'll be</h3>
        <div id="map"></div>
    </div>
</div>

<script src="/js/map.js"></script>